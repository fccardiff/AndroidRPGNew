<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chatMessage" android:layout_alignParentTop="false" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" android:hint="Chat"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/chatMessageSend" android:layout_alignTop="@+id/chatMessage" android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/chatView" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_above="@+id/chatMessage" android:layout_alignParentRight="true"/>
</RelativeLayout>